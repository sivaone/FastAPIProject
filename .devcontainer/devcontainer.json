{
  "name": "FastAPIProject Dev Container",
  "image": "mcr.microsoft.com/devcontainers/python:1-3",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "workspaceFolder": "/workspace/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "forwardPorts": [8000, 8080],
  "postCreateCommand": "python -m pip install --upgrade pip && python -m pip install -r requirements.txt",
  "remoteUser": "vscode"
}